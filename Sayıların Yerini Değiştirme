import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    java.util.Scanner kb =new java.util.Scanner(System.in);
	    int sayi1,sayi2,gecici=0,secim=0;
		System.out.println("Birinci Sayıyı Girin");
		sayi1=Integer.parseInt(kb.nextLine());
		System.out.println("İkinci Sayıyı Girin");
		sayi2=Integer.parseInt(kb.nextLine());
		System.out.println("Sayıları Değiştirmek İstiyormusunuz?");
		System.out.println("Evet/1,Hayır/0");
		secim=Integer.parseInt(kb.nextLine());
		if(secim==1){
		    System.out.println(sayi1);
		    System.out.println(sayi2);
		    System.out.println("Sayılar Değiştiriliyor");
		    gecici=sayi1;
		    sayi1=sayi2;
		    sayi2=gecici;
		    System.out.println("Sayı 1'in yeni hali"+" " + sayi1+" Sayı 2'in yeni hali"+" "+sayi2);
		}
		else{
		    System.out.println("İşlem yapılmadığı için çıkış yapılıyor");
		    }
	}
	
}
