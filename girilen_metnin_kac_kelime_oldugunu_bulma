import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
        Scanner kb = new Scanner(System.in);
        int sayac =1;
        int sayac2 =1;
        String donut;
        System.out.println("Metni yazın.");
        donut = kb.nextLine();
        for( int i = 0; i < donut.length(); i++)
        {
            if(donut.charAt(i) == ' ') {
                sayac++;
                
            }
            if(donut.charAt(i) == '.') {
                sayac2++;
                
            }
        }
        System.out.println("Girilen metinde " + sayac + " tane kelime vardır.");
        System.out.println("Girilen metinde " + sayac2 + " tane cümle vardır.");
	}
}
